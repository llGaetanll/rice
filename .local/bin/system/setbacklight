#!/bin/sh

# Script taken from an answer on - https://bbs.archlinux.org/viewtopic.php?id=134972
# See also `initbacklight` script

# base dir for backlight class
basedir="/sys/class/backlight"

# get the backlight handler
handler=$(ls $basedir)

# get current brightness
old_brightness=$(cat "$basedir/$handler/brightness")

# get max brightness
max_brightness=$(cat "$basedir/$handler/max_brightness")

# get current brightness %
old_brightness_p=$(( 100 * $old_brightness / $max_brightness ))

# calculate new brightness %
new_brightness_p=$(($old_brightness_p $1))

# calculate new brightness value
new_brightness=$(( $max_brightness * $new_brightness_p / 100 ))

# set the new brightness value
# if this doesn't work, make sure you have the right file permissions with:
#   sudo chmod 666 "$basedir/$handler/brightness"

echo $new_brightness > "$basedir/$handler/brightness"
