#!/bin/sh
# This script toggles wireguard with the default location

connection_status() {
    if [ -f "$config" ]; then
        connection=$(sudo wg show "$config_name" 2>/dev/null | head -n 1 | awk '{print $NF }')

        if [ "$connection" = "$config_name" ]; then
            echo "1"
        else
            echo "2"
        fi
    else
        echo "3"
    fi
}

wg_config_home="$HOME/Files/wg/mullvad/"

# config points at the wireguard file
config="${wg_config_home}/mullvad-us155.conf" # Miami
config_name=$(basename "${config%.*}")

case "$1" in
--toggle)
    if [ "$(connection_status)" = "1" ]; then
        sudo wg-quick down "$config" 2>/dev/null
    else
        sudo wg-quick up "$config" 2>/dev/null
    fi
    ;;
*)
    if [ "$(connection_status)" = "1" ]; then
        echo "✔ VPN"
    elif [ "$(connection_status)" = "3" ]; then
        echo "✘ Error" # config not found
    else
        echo "✘ VPN"
    fi
    ;;
esac
